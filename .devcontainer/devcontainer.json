/* Contents of {repository-root}/.devcontainer/devcontainer.json */

{
  // Open port 3000 by default
  "appPort": 3000,

  // Install Python and Azure Functions extensions
  "extensions": [
    "ms-python.python",
    "ms-azuretools.vscode-azurefunctions",
    "auchenberg.vscode-browser-preview",
    "ms-vscode.azurecli"
  ],

  // Run Bash script in .devcontainer directory
  "postCreateCommand": "/bin/bash ./.devcontainer/install.sh > ~/install.log"
  //"postCreateCommand": ""
  }
